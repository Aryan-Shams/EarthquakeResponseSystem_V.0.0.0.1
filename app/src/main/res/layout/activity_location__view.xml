<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shopnosoft.earthquakeresponsesystem.Location_View">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_lvw_welcmmsg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Current Location :"
        android:id="@+id/textView3"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_lvw_welcmmsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lattitude :"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_lvw_lattitude"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_lvw_welcmmsg"
        android:layout_alignEnd="@+id/tv_lvw_welcmmsg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Longititude : "
        android:id="@+id/textView7"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_lvw_lattitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_lvw_longititude"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_lvw_lattitude"
        android:layout_alignEnd="@+id/tv_lvw_lattitude" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Present Address :"
        android:id="@+id/textView8"
        android:layout_below="@+id/tv_lvw_longititude"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/tv_lvw_longititude"
        android:layout_alignEnd="@+id/tv_lvw_longititude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_lvw_address"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Location"
        android:id="@+id/btn_lv_updatelctn"
        android:layout_below="@+id/tv_lvw_address"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/tv_lvw_address"
        android:layout_alignEnd="@+id/tv_lvw_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#66BB6A"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Location"
        android:id="@+id/btn_lv_vwlctn"
        android:layout_below="@+id/btn_lv_updatelctn"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/btn_lv_updatelctn"
        android:layout_alignEnd="@+id/btn_lv_updatelctn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FF1744"
        android:textColor="#000000" />

</RelativeLayout>
